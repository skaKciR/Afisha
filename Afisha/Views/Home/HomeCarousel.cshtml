@model Event
<a asp-area="" asp-controller="Event" asp-action="Index" asp-route-id="@Model.Id">
    <div id="tekst_sverhu_kartinki">
        <img style="max-height:520px;    min-height: 170px;filter:brightness(0.8);" src=@string.Concat("data:image/jpeg;base64,", Convert.ToBase64String(@Model.Image)) class="d-block w-100">
        <div class="tekst_sverhu_kartinki_1" style="top: 7%;left: 6%;">
            <p style="font-size: 2.5vmin;" class="h2">@Model.Type  @Model.Age+ </p>
        </div>
        @if (@Model.PCard == true)
        {
            <div class="tekst_sverhu_kartinki_1" style="top: 7%;left:75%;margin-left:-4vmin;">
                <p style="font-size: 2.5vmin;text-align:center;" class="h2">Пушкинская карта</p>
            </div>
        }
        <div class="tekst_sverhu_kartinki_1" style="padding: 1vmin 1vmin 1vmin 1vmin;text-align: center;background: #000000cf;left: 82%;bottom: 15%;border-radius: 2.2vmin;">
            <p style="font-size: 3.5vmin;margin-bottom: 0;" class="h2">@Model.Cost ₽</p>
        </div>
        <div class="tekst_sverhu_kartinki_1">
            <p style="font-size: 4vmin;" class="h1 ">@Model.Title </p>
            <p style="font-size: 2.5vmin;text-align: center;" class="h2">@Model.Date.ToString("dd MMMM") @Model.Date.ToShortTimeString()  </p>
        </div>
    </div>
</a>