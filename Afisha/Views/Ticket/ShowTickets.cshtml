<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
@model IQueryable<Ticket>
@{


}

<div style="display:flex;">
    <h1 style="font-size: 2.7vmax;"> Ваши купленные билеты (@Model.Count()):</h1>
</div>
@if (Model.Any())
{
    <div class="container">
        <div class="row">
            <div class="smallimg" style=" margin-bottom: 1.4ex;">
            </div>
            @foreach (Ticket entity in Model)
            {

                <div class="col-xs-12 col-md-6" style="padding-top: 0px;padding-bottom: 3ex;">


                    <div class="smallimg">
                        <a>

                            <div id="tekst_sverhu_kartinki">
                                <div class="brightless">
                                    <img style="box-shadow: 0px 5px 9px 3px #000000c4;" src=@string.Concat("data:image/jpeg;base64,", Convert.ToBase64String(entity.Image)) />
                                    <div class="tekst_sverhu_kartinki_1" style="top: 7%;left: 6%;">
                                        <p style="font-size:min(3.5vmin,1.4ex);" class="h2">@entity.Age+ </p>
                                    </div>
                                    @if (@entity.PCard == true)
                                    {
                                        <div class="tekst_sverhu_kartinki_1" style="top: 7%;left:75%;">
                                            <p style="font-size:min(2.5vmin,1ex); text-align:center;" class="h2">Пушкинская карта</p>
                                        </div>
                                    }
                                  
                                    <button type="button" class="btn btn-outline-success col-md-12 col-ms-12" data-bs-toggle="modal" data-bs-target="#exampleModal">Sign in</button>
                                    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                        <div class="modal-dialog col-xs-12 col-md-12 modal-dialog-centered">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-tittle" id="#exampleModalLabel">
                                                        @entity.Type @entity.Title:
                                                    </h5>
                                                    <button class="btn-close" data-bs-dismiss="modal" aria-label="close"></button>
                                                </div>
                                                <div class="modal-body">
                                                    <img src=@string.Concat("data:image/jpeg;base64,", Convert.ToBase64String(entity.QR)) />
                                                </div>
                                                <div class="modal-footer mx-auto">
                                                
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="tekst_sverhu_kartinki_1">
                                        <p style="font-size:min(4vmin,1.4ex);" class="h1">@entity.Title </p>
                                        <p style="font-size:min(2.5vmin,1ex);text-align: center;" class="h2">@entity.Date.ToString("dd MMMM") @entity.Date.ToShortTimeString()  </p>
                                    </div>
                                </div>
                            </div>

                        </a>
                    </div>
                </div>

            }
        </div>
    </div>
}
else
{
<h2 style="font-size:2vmax;"> Здесь пусто</h2>

    <a style="text-decoration: none !important;" asp-controller="Cart" asp-action="ShowCart" asp-route-name="@User.Identity.Name"><h2 style="font-size:2vmax;"> Проверьте вашу корзину,возможно вы не оплатили билет.</h2></a>

}

<style>
    .tekst_sverhu_kartinki_1 {
        position: absolute;
        bottom: 26%;
        left: 5%;
        text-transform: uppercase;
        color: #fffbfb;
    }
</style>