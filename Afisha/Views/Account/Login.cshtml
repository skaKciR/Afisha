<section class="h-100" --bs-gutter-x: 0; padding-top: 0;padding-right: 0;padding-left: 0;>
	
	<div class="container h-100" style="padding-right: 0; padding-left:0;">
			<div class="row justify-content-sm-center h-100">
			<div class="col-xxl-4 col-xl-5 col-lg-5 col-md-7 col-sm-9" style="padding-top: 0;">
				<div style="border-radius: 2em;margin: 0 1em 0em 1em;" class="card shadow-lg bg-dark">
						<div class="card-body p-5">
						<a  asp-controller="Home" asp-action="Index">
							<button style="float:right;" type="button" class="btn-close btn-close-white" aria-label="Close"></button>
						</a>
						<h1 class="fs-4 card-title fw-bold mb-4" style=" color: #f3f1f1ed;">Вход</h1>
							<form method="POST" class="needs-validation" novalidate="" autocomplete="off">
								<div class="mb-3">
								<label style="color: #e5e5e5!important;"class="mb-2 text-muted" asp-for="UserName">Логин</label>
								<input asp-for="UserName" />
								<span asp-validation-for="UserName"></span>
									<div class="invalid-feedback">
										Заполните Логин
									</div>
								</div>

								<div class="mb-3">
								<label style="color: #e5e5e5!important;" class="mb-2 text-muted" asp-for="Password">Пароль</label>
								<input asp-for="Password" />
								<span asp-validation-for="Password"></span>
									<div class="invalid-feedback">
										Заполните пароль
									</div>
								</div>
							<div class="mb-3">
								<div class="checkbox-group">
									<label style ="color: #e5e5e5!important;" asp-for="RememberMe">Запомнить меня</label>
									<input type="checkbox" asp-for="RememberMe" />
									<span asp-validation-for="RememberMe"></span>
								</div>
								<div class="invalid-feedback">
									Заполните пароль
								</div>
							</div>


								@*<p class="form-text text-muted mb-3">
									By registering you agree with our terms and condition.
								</p>*@

								<div class="align-items-center d-flex">
								<button style="margin: auto;width: 90%;margin-top:7%" type="submit" class="btn btn-primary ms-auto">
										Войти
									</button>
								</div>
							</form>
						</div>
					<div class="card-footer py-3 border-0" style=" padding-bottom: 3rem !important;">
							<div class="text-center text-light">
								Еще нет аккаунта? <a asp-controller="Account" asp-action="Register" class="text-light">Зарегистрируйтесь</a>
							</div>
						</div>
					</div>
		
				</div>
			</div>
		</div>
	</section>

	<script src="js/login.js"></script>




