
@model Afisha.Models.RegisterViewModel

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">


<section class="h-100" --bs-gutter-x: 0; padding-top: 0;padding-right: 0;padding-left: 0;>

	<div class="container h-100" style="padding-right: 0; padding-left:0;">
		<div class="row justify-content-sm-center h-100">
			<div class="col-xxl-4 col-xl-5 col-lg-5 col-md-7 col-sm-9" style="padding-top: 0;">
				<div style="border-radius: 2em;margin: 0 1em 0em 1em;box-shadow: 0px 5px 9px 3px #000000c4 !important;" class="card shadow-lg bg-dark">
					<div class="card-body p-5">
						<a asp-controller="Home" asp-action="Index">
							<button style="float:right;" type="button" class="btn-close btn-close-white" aria-label="Close"></button>
						</a>
						<h1 class="fs-4 card-title fw-bold mb-4" style=" color: #f3f1f1ed;">Регистрация</h1>
						<form method="POST" class="needs-validation" novalidate="" autocomplete="off">
							<div class="mb-3">
								<label style="color: #e5e5e5!important;"  class="mb-2 text-muted" asp-for="UserName">Логин</label>
								<input asp-for="UserName" required placeholder="Введите логин">
								<span style="text-align: center;color: #0d6efd;position: absolute; margin-top: -7%;"  asp-validation-for="UserName"></span>
								<div class="invalid-feedback">
									Заполните Логин
								</div>
							</div>

							<div class="mb-3">
								<label style="color: #e5e5e5!important;" class="mb-2 text-muted" asp-for="Email">Email</label>
								<input asp-for="Email" required placeholder="Введите адрес электронной почты" />
								<span style="text-align: center;color: #0d6efd;position: absolute; margin-top: -7%;"  class="span" asp-validation-for="Email"></span>
								<div class="invalid-feedback">
									Заполните email
								</div>
							</div>
							<div class="mb-3">
								<label style="color: #e5e5e5!important;" class="mb-2 text-muted" asp-for="Password">Пароль</label>
								<input asp-for="Password" required placeholder="Введите пароль" />
								<span style="text-align: center;color: #0d6efd;position: absolute; margin-top: -7%;"  asp-validation-for="Password"></span>
								<div class="invalid-feedback">
									Заполните пароль
								</div>
							</div>
							<div>
								<label style ="color: #e5e5e5!important;" class="mb-2 text-muted" asp-for="PasswordConfirm">Подтверждение пароля</label>
									<input asp-for="PasswordConfirm" required placeholder="Подтвердите пароль"/>
									<span style="text-align: center;color: #0d6efd;position: absolute; margin-top: -7%;" class="span" asp-validation-for="PasswordConfirm"></span>
								<div class="invalid-feedback">
									Заполните потдверждение пароль
								</div>
							</div>
							<div class="align-items-center d-flex">
								<button style="margin: auto;width: 90%;margin-top:5%;margin-bottom:-5%" type="submit" class="btn btn-primary ms-auto" data-bs-toggle="modal" data-bs-target="#exampleModal">
									Зарегистрироваться
								</button>
								
								<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
									<div class="modal-dialog">
										<div class="modal-content">
											<div class="modal-header">
												<h5 class="modal-tittle" id="#exampleModalLabel">
													Завершение регистрации <i style="color:green;" class="fa fa-check" aria-hidden="true"></i>

												</h5>
												<button class="btn-close" data-bs-dismiss="modal" aria-label="close"></button>
											</div>
											<div class="modal-body">
												<h5 class="modal-body" id="#exampleModalLabel"> Пожалуйста,проверьте вашу почту для завершения регистрации. </h5>
											</div>
											<div class="modal-footer">
											</div>
										</div>
									</div>
								</div>
							</div>
						</form>
					</div>
					<div class="card-footer py-3 border-0" style=" padding-bottom: 3rem !important;">
						<div class="text-center text-light">
							Уже есть аккаунт ? <a asp-controller="Account" asp-action="Login" class="text-light">Войти</a>
						</div>
					</div>
				</div>

			</div>
		</div>
	</div>
</section>

<script src="js/login.js"></script>

